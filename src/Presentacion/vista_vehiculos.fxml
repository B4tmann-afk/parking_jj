<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Presentacion.VehiculosController">

    <top>
        <Label text="Gestión de Vehículos"
               style="-fx-font-size: 22px; -fx-padding: 15px;"/>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 15px;">

            <!-- Campos -->
            <HBox spacing="10">
                <TextField fx:id="txtPlaca" promptText="Placa"/>
                <TextField fx:id="txtTipo" promptText="Tipo (Carro/Moto)"/>
            </HBox>

            <!-- Botones -->
            <HBox spacing="10">
                <Button text="Agregar" onAction="#agregarVehiculo"/>
                <Button text="Eliminar" onAction="#eliminarVehiculo"/>
                <Button text="Actualizar" onAction="#actualizarVehiculo"/>
            </HBox>

            <!-- Tabla -->
            <TableView fx:id="tablaVehiculos" prefHeight="250">
                <columns>
                    <TableColumn text="Placa" fx:id="colPlaca" prefWidth="150"/>
                    <TableColumn text="Tipo" fx:id="colTipo" prefWidth="150"/>
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
